<nav>
  <% if user_signed_in? %>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn">
      <%= cl_image_tag @user.avatar.key, class: "avatar" %>
    </label>
    <%= link_to root_path do %>
      <label class="logo"><%= image_tag "logo.svg" %><span><h1>FavelaZap</h1></span></label>
    <% end %>
    
    <ul id="nav-ul">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Read now", news_path %></li>
      <li><%= link_to "Your profile", profile_path %></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    </ul>
  <% else %>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn">
      <p class="enter">Enter</p>
    </label>

    <%= link_to root_path do %>
      <label class="logo"><%= image_tag "logo.svg" %><span><h1>FavelaZap</h1></span></label>
    <% end %>

    <ul id="nav-ul">
      <li><%= link_to "Sign up", new_user_registration_path %></li>
      <li><%= link_to "Login", new_user_session_path %></li>
    </ul>
  <% end %>
</nav>
