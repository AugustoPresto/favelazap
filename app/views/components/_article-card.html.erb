<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-12">
        <%= link_to article_path(article) do %>
          <div class="card my-2">
            <%= cl_image_tag article.photo.key, crop: :fill, gravity: :auto, class: "card-img-top green" %>
            <div class="card-body">
              <p class="card-text"><strong><%= article.title.truncate(60) %></strong></p>
            </div>
            <p class="created-at-card d-flex justify-content-end"><%= article.created_at.strftime("%e %B %Y") %></p>
          </div>
        <% end %>
        <% if @user == article.user %>
          <div class="icons">
            <%= link_to article_path(article.id), method: :delete, data: { confirm: "Delete #{article.title}?" } do %>
              <i class="fas fa-trash"></i>
            <% end %>
            <div class="edit-icon"><i class="fas fa-edit"></i></div>
          </div>
        <% end %>
      </div>
    <% end %>  
  </div>
</div>
