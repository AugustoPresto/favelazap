<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-12">
        <%= link_to article_path(article) do %>
          <div class="card shadow-sm my-2">
            <%= cl_image_tag article.photo.key, class: "card-img-top" %>
            <div class="card-body">
              <p class="card-text"><strong><%= article.title.truncate(60) %></strong></p>
            </div>
            <p class="created-at-card d-flex justify-content-end"><%= article.created_at.strftime("%e %B %Y") %></p>
          </div>
        <% end %>
      </div>
    <% end %>  
  </div>
</div>
