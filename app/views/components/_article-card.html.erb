<div class="container">
  <div class="row">
    <% @user_articles.each do |article| %>
      <div class="col-12">
        <%= link_to article_path(article) do %>
          <div class="card shadow-sm my-2">
            <img src="https://static01.nyt.com/images/2021/05/28/world/28CANADA-LETTER-SHELL-hp/28CANADA-LETTER-SHELL-hp-threeByTwoMediumAt2X-v3.jpg" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text"><strong><%= article.title.truncate(60) %></strong></p>
            </div>
            <p class="created-at-card d-flex justify-content-end"><%= article.created_at.strftime("%e %B %Y") %></p>
          </div>
        <% end %>
      </div>
    <% end %>  
  </div>
</div>
