<div class="container" id="article-page">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-12">
        <%= link_to article_path(article) do %>
          <div class="card mb-2">
            <%= cl_image_tag article.photo.key, crop: :fill, gravity: :auto, class: "card-img-top green" %>
            <div class="card-body">
              <p class="card-text mx-2 mb-1"><%= article.title %></p>
            </div>
            <p class="created-at-card d-flex justify-content-end"><%= article.created_at.strftime("%e %B %Y") %></p>
            <% if @user == article.user %>
              <div class="icons">
                <%= link_to article_path(article), method: :delete, data: {confirm: "Are you sure?"} do %>
                  <div class="delete-icon"><i class="fas fa-trash"></i></div>
                <% end %>
                <%= link_to edit_article_path(article) do %>
                  <div class="edit-icon"><i class="fas fa-edit"></i></div>
                <% end %>
              </div>
            <% end %>
          </div>
          <hr>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
